# API Configuration
API_HOST=0.0.0.0    # The host to bind the API to. Use 0.0.0.0 to listen on all interfaces
API_PORT=8000       # Primary FastAPI service port
METRICS_PORT=8090   # Port for Prometheus metrics endpoint

# Application Settings
APP_NAME="Market Analysis API"   # Display name of the application
DEBUG=false                      # Enable/disable debug mode

# Queue Configuration
REDIS_HOST=redis          # Redis server hostname
REDIS_PORT=6379           # Default Redis port
RABBITMQ_HOST=localhost   # RabbitMQ server hostname
RABBITMQ_PORT=5672        # Default RabbitMQ port

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/market_analysis   # PostgreSQL connection string

# Development
ENVIRONMENT=development   # Current environment (development/staging/production)

# GitHub Configuration
GITHUB_TOKEN=github_pat_YOUR_TOKEN_HERE   # GitHub personal access token